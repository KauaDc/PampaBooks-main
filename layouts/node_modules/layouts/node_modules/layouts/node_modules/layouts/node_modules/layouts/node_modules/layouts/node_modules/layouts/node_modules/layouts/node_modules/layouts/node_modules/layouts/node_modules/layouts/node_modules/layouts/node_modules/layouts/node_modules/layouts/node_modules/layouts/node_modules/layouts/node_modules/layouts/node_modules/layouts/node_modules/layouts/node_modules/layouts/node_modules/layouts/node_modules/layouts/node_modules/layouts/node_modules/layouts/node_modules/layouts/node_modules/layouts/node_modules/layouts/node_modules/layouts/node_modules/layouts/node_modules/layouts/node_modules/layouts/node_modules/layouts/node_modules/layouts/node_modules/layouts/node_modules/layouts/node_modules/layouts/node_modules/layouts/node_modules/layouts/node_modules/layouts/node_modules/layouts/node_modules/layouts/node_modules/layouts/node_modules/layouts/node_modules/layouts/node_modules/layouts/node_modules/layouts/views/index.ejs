
<div class="container">

    <div class="row">
    <h1 class="text-center">Catálogo</h1>
        
    <div class="col-lg-3 filtros">
    <hr>
    
    <h5>Categorias</h5>
    <% if (Array.isArray(categorias) && categorias.length > 0) { %>
    <% categorias.forEach(categoria => { %>
    <div class="form-group">
    <input type="hidden" name="" id="" value="<%= categoria._id %>">
    <input type="checkbox" id="<%= categoria._id %>">
    <label for="<%= categoria._id %>"><%= categoria.nome %> ( <%= categoria.quantLivros %> )</label>
    </div>
    <% }) %>
    <% } else { %>
    <p>Nenhuma categoria disponível.</p>
    <% } %>
    </div>
    
    <div class="col-lg-9">

                <div class="col-lg-9">
                <div class="row">
                <% if (Array.isArray(livros) && livros.length > 0) { %>
                <% livros.forEach(livro => { %>
                <div class="col-md-5 mb-4">
                <div class="card" >
                <div class="header">
                <div class="image ">
                <img src="data:image/jpeg;base64,<%= livro.capa %>" alt="Capa do Livro" >
                <span class="tag"><%= livro.categorias.nome %></span>
                </div>

                </div>
                <div class="info">
                <span class="title"><%= livro.titulo %></span>
                </a>
                <p class="description autor"><%= livro.autor %></p>
                <p class="description"><%= livro.descricao %></p>
                <form action="/criarpedido" method="post">
                <input type="hidden" name="livroId" value="<%= livro._id %>">
                <input type="hidden" name="preco" value="<%= livro.preco %>">
                <div class="botao-container">

                <button type="submit" class="btn btn-primary"><i class="fa-solid fa-cart-plus"></i></button>
                </form>
                <form action="/avaliacoes" method="get">
                <input type="hidden" name="livroId" value="<%= livro._id %>">
                <button type="submit" class="btn btn-secondary"><i class="fa-solid fa-comment"></i></button>
                </form>
                </div>
                </div>
                </div>
                </div>
                <% }); %>
                <% } else { %>
                <p>Nenhum livro disponível no momento.</p>
                <% } %>
                </div>
                </div>
                </div>
                </div>
        
            