
<div class="container">
    <% if(usuario){ %>
        <h1><%=usuario.nome%></h1>
     <% } %>
    <div class="row">
    <h1 class="text-center">Catálogo</h1>
        
    <div class="col-lg-3 filtros">
    <h4>Filtros</h4>
    <hr>
    
    <h5>Categorias</h5>
    <% if (Array.isArray(categorias) && categorias.length > 0) { %>
    <% categorias.forEach(categoria => { %>
    <div class="form-group">
    <input type="hidden" name="" id="" value="<%= categoria._id %>">
    <input type="checkbox" id="<%= categoria._id %>">
    <label for="<%= categoria._id %>"><%= categoria.nome %> ( <%= categoria.quantLivros %> )</label>
    </div>
    <% }) %>
    <% } else { %>
    <p>Nenhuma categoria disponível.</p>
    <% } %>
    </div>
    
    <div class="col-lg-9">
    <div class="row">
    <% if (Array.isArray(livros) && livros.length > 0) { %>
    <% livros.forEach(livro => { %>
    <div class="col-md-4">
    <div class="livro-card">
    <img src="data:image/jpeg;base64,<%= livro.capa %>" alt="Capa do Livro" style="width: 100%;">
    <div class="titulo-autor">
    <h5><%= livro.titulo %></h5>
    <p><%= livro.autor %></p>
    </div>
    <p class="card-text"><%= livro.descricao %></p>
    
    <% if (livro.categorias && livro.categorias.nome) { %>
    <div class="d-flex justify-content-between align-items-center">
    <span><%= livro.categorias.nome %></span>
        <form action="/criarpedido" method="post">
            <input type="hidden" name="livroId" value="<%= livro._id %>">
            <input type="hidden"name="preco" value="<%= livro.preco %>">
            <button type="submit" class="btn btn-primary">+</button>
        </form>
    </div>
    <% } %>
    </div>
    </div>
    <% }); %>
    <% } else { %>
    <p>Nenhum livro disponível no momento.</p>
    <% } %>
    </div>
    </div>
    </div>
    </div>